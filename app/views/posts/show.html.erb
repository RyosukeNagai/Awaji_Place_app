<div class="container-fluid">
  <div class="row">
    <div class="col-lg-9">
      <div class="posts-show">
        <p><%= @post.title %></p>
        <p><%= @post.created_at.strftime('%Y年/%m月/%d日') %></p>
        <%= attachment_image_tag @post, :image, fallback:"no_image.JPG", class:"product-show" %>
        <p><%= @post.body %></p>
        <p><span>
            <span><　</span><%= @post.shop_name %><span>　></span></p>
        <p><%= @post.business_hours %></p>
        <p><%= @post.address %></p>
        <p><%= @post.url %></p>
        <p class="posts-show__title">Genre　</p>
        <p class="badge badge-warning" style="padding: 5px;"><%= @post.genre.name %></p>
        <p>
          <p class="posts-show__title">Tags　</p>
          <% @post.tags.each do |tag| %>
            <p class="badge badge-secondary" style="padding: 5px;">#<%= tag.name %></p>
          <% end %>
        </p>
      </div>
    </div>
    <div class="col-lg-3">
      <%= render "posts/side", posts: @posts %>
    </div>
  </div>
</div>