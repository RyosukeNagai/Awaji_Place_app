<div class="container-fluid">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-8">
      <div class="posts">
        <% @posts.each do |post| %>
        <div class="posts__content">
          <!-- 4つごとに折り返し-->
          <p class=""><%= post.title %></p>
          <span><%= post.created_at.strftime('%Y年/%m月/%d日') %></span>
          <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :image, fallback:"no_image.JPG", class:"posts__image" %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col-lg-2">
      <%= render "posts/side", posts: @posts %>
  </div>
</div>

<%= paginate @posts %>