<%= render "posts/header" %>
<div class="container-fluid bg">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-8">
      <%= render "news" %>
      <div class="posts">
        <% @posts.each do |post| %>
        <div class="posts__content">
          <!-- 4つごとに折り返し-->
          <p class="">
            <%= post.title %>
          </p>
          <span><%= post.created_at.strftime('%Y/%m/%d') %></span>
          <div class="genre-name">
            <%= post.genre.name %>
          </div>
          <div class="impression-name">
            <i class="fas fa-eye"> <%= post.impressions_count %></i>
          </div>
          <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :image, fallback:"no_image.JPG", class:"posts__image" %>
          <% end %>
        </div>
        <% end %>
      </div>
      <%= paginate @posts %>
    </div>
    <div class="col-lg-2">
      <%= render "posts/side", posts: @posts %>
    </div>
  </div>
</div>