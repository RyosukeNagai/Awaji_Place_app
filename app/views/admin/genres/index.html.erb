<div class="genre">
  <h2>Genre作成</h2>
  <div class="container">
    <div class="row">
      <div class="col-lg-5">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
          Genre作成
        </button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Genre作成</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <%= form_with(model: @genre, url: admin_genres_path,method: :post) do |f| %>
                <div class="modal-body">
                  <div class="form-group">
                    <%= f.label :name, "ジャンル名" %>
                    <%= f.text_field :name,class:"form-control", placeholder: "食 温泉 海水浴 etc..." %>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
                  <%= f.submit "投稿する", class: "btn btn-outline-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-5 genres">
        <%= render 'genres', genres: @genres %>
      </div>
    </div>
  </div>
</div>

